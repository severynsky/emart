%nav.navbar.navbar-default
  .container
    .collapse.navbar-collapse#bs-example-navbar-collapse-1
      %ul.nav.navbar-nav
        %li
          = link_to 'intro', root_path
        %li
          = link_to 'home', products_path
        - if current_user.role == "admin"
          %li
            %a.red
              user is admin
        %li
          = link_to 'new product', new_product_path
        %li
          = link_to 'new category', new_category_path
        %li
          = $show_counter
        - if @cart != nil
          - if !@cart.product_records.empty?
            %li
              = link_to "cart", cart_path(session[:cart_id])
          - else
            %li.red
              = link_to "cart empty"

      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li=link_to "#{current_user.email}", users_profile_path(current_user.id)
          %li= link_to 'edit',edit_user_registration_path
          %li= link_to 'exit', destroy_user_session_path, method: :delete
        -else
          %li= link_to "sign in", new_user_session_path
          %li= link_to "sign up", new_user_registration_path

